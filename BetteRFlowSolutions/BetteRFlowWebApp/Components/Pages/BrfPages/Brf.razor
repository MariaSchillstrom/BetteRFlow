@page "/brf"
@rendermode InteractiveServer
@using System.Text.Json
@inject IJSRuntime JS

<PageTitle>BRF Portal</PageTitle>

<div class="container mt-4">
    @if (!string.IsNullOrEmpty(userName))
    {
        <div class="alert alert-success">
            <strong>Välkommen @userName!</strong> Du är inloggad som BRF-användare.
        </div>
    }

    <h1>BRF-portal</h1>
    <p>Välj vad du vill göra i menyn till vänster.</p>
</div>


