@page "/purchase-brf/{id:int}"
@rendermode InteractiveServer
@inject IHttpClientFactory ClientFactory
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="container mt-4">
    @if (!purchaseComplete)
    {
        <div class="card">
            <div class="card-body">
                <h3>Köp BRF-information</h3>
                <p class="lead">Du är på väg att köpa fullständig information om denna BRF.</p>

                <div class="alert alert-info">
                    <strong>Pris:</strong> 299 kr
                </div>

                @if (isProcessing)
                {
                    <div class="text-center">
                        <div class="spinner-border" role="status"></div>
                        <p>Behandlar betalning...</p>
                    </div>
                }
                else
                {
                    <button class="btn btn-success btn-lg" @onclick="ProcessPayment">
                        💳 Betala med Swish
                    </button>
                    <button class="btn btn-secondary ms-2" @onclick="Cancel">
                        Avbryt
                    </button>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <h3 class="text-success">✅ Köp genomfört!</h3>
                <p class="lead">Du har nu tillgång till fullständig information.</p>
                <p>Transaktions-ID: <strong>@transactionId</strong></p>

                <button class="btn btn-primary mt-3" @onclick="GoToSearch">
                    Tillbaka till sökning
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private int currentUserId = 0;
    private bool isProcessing = false;
    private bool purchaseComplete = false;
    private string transactionId = "";

    protected override async Task OnInitializedAsync()
    {
        // Hämta inloggad användares ID från localStorage
        try
        {
            var userJson = await JS.InvokeAsync<string>("localStorage.getItem", "user");
            if (!string.IsNullOrEmpty(userJson))
            {
                using var doc = System.Text.Json.JsonDocument.Parse(userJson);
                if (doc.RootElement.TryGetProperty("id", out var idElement))
                {
                    currentUserId = idElement.GetInt32();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fel vid hämtning av userId: {ex.Message}");
        }
    }

    private async Task ProcessPayment()
    {
        if (currentUserId == 0)
        {
            await JS.InvokeVoidAsync("alert", "Du måste vara inloggad för att köpa!");
            return;
        }

        isProcessing = true;

        try
        {
            var purchaseDto = new
            {
                UserId = currentUserId,      // ✅ Dynamisk!
                FormSubmissionId = Id,       // ✅ Dynamisk!
                Amount = 299,
                PurchaseDate = DateTime.UtcNow,
                PaymentStatus = "Completed"
            };

            var http = ClientFactory.CreateClient("ApiClient");
            var response = await http.PostAsJsonAsync("api/Purchase", purchaseDto);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<Dictionary<string, object>>();
                transactionId = result?["purchaseId"]?.ToString() ?? "N/A";
                purchaseComplete = true;
            }
            else
            {
                var body = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Status: {response.StatusCode}\n\n{body}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Fel: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/sok-brf");
    }

    private void GoToSearch()
    {
        Navigation.NavigateTo("/sok-brf");
    }
}