@page "/admin/brf/edit/{Id:int}"

@using BetteRFlow.Shared.DTOs

<div class="container mt-4">
    <h3>Redigera BRF</h3>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border"></div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (success)
    {
        <div class="alert alert-success">BRF uppdaterad! Omdirigerar...</div>
    }
    else
    {
        <EditForm Model="@brfDto" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label>Föreningens namn</label>
                <InputText @bind-Value="brfDto.ForeningensNamn" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Organisationsnummer</label>
                <InputText @bind-Value="brfDto.OrganisationsNummer" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Gatuadress</label>
                <InputText @bind-Value="brfDto.Gatuadress" class="form-control" />
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label>Postnummer</label>
                    <InputText @bind-Value="brfDto.Postnummer" class="form-control" />
                </div>
                <div class="col-md-8">
                    <label>Ort</label>
                    <InputText @bind-Value="brfDto.Ort" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label>Email</label>
                <InputText @bind-Value="brfDto.KontaktEmail" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Telefon</label>
                <InputText @bind-Value="brfDto.KontaktTelefon" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Hemsida</label>
                <InputText @bind-Value="brfDto.Hemsida" class="form-control" />
            </div>

            <button class="btn btn-primary" disabled="@isSubmitting">
                Uppdatera
            </button>
            <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">
                Avbryt
            </button>
        </EditForm>
    }
</div>
