@page "/admin/maklare"
@inject IHttpClientFactory ClientFactory
@rendermode InteractiveServer
@using BetteRFlow.Shared.DTOs

<PageTitle>Mäklarlista</PageTitle>

<div class="container mt-4">
    <h3>Registrerade Mäklare</h3>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Laddar...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (maklare == null || !maklare.Any())
    {
        <div class="alert alert-info">
            Inga mäklare har registrerat sig ännu.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Namn</th>
                        <th>Firma</th>
                        <th>Email</th>
                        <th>Registrerad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in maklare)
                    {
                        <tr>
                            <td>@m.Fornamn @m.Efternamn</td>
                            <td>@(m.Firma ?? "-")</td>
                            <td>@m.Email</td>
                            <td>@m.CreatedAt.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-3">
            <p class="text-muted">Totalt: @maklare.Count mäklare</p>
        </div>
    }

    <div class="mt-3">
        <a href="/admin" class="btn btn-secondary">Tillbaka till Dashboard</a>
    </div>
</div>

@code {
    private List<UserDto>? maklare;
    private bool isLoading = true;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadMaklare();
    }

    private async Task LoadMaklare()
    {
        isLoading = true;
        errorMessage = "";

        try
        {
            var http = ClientFactory.CreateClient("ApiClient");
            var allUsers = await http.GetFromJsonAsync<List<UserDto>>("api/User");

            // Filtrera bara mäklare
            maklare = allUsers?.Where(u => u.Role == "Realtor").ToList();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}
