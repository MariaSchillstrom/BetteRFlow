@page "/admin"
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">BRF-hantering</h5>
                    <p class="card-text">Skapa och hantera BRF:er</p>
                    <button class="btn btn-primary" @onclick="GoToCreateBrf">Skapa ny BRF</button>
                    <button class="btn btn-secondary ms-2" @onclick="GoToBrfList">Visa alla BRF:er</button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Formulär</h5>
                    <p class="card-text">Se inskickade formulär från BRF:er</p>
                    <button class="btn btn-info" @onclick="GoToFormList">Visa formulär</button>
                </div>
            </div>
        </div>
    </div>

    <!-- NY RAD FÖR IMPORT -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Importera BRF:er</h5>
                    <p class="card-text">Ladda upp Excel-fil med BRF-data</p>
                    <button class="btn btn-success" @onclick="GoToImport">Importera från Excel</button>
                </div>
            </div>
        </div>
    </div>
</div>