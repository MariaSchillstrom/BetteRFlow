@page "/admin/brf"
@inject HttpClient Http
@inject NavigationManager Navigation
@rendermode InteractiveServer
@using BetteRFlow.Shared.DTOs
@using BetteRFlow.Shared.Models

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>BRF-hantering</h3>
        <button class="btn btn-primary" @onclick="CreateNew">
            <span class="bi bi-plus-circle me-2"></span>Skapa ny BRF
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Laddar...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (brfList == null || !brfList.Any())
    {
        <div class="alert alert-info">
            Inga BRF:er hittades. Skapa din första BRF!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Namn</th>
                        <th>Organisationsnummer</th>
                        <th>Adress</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Skapad</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brf in brfList)
                    {
                        <tr>
                            <td><strong>@brf.BrfNamn</strong></td>
                            <td>@brf.OrganisationsNummer</td>
                            <td>
                                @brf.Gatuadress<br />
                                @brf.Postnummer @brf.Ort
                            </td>
                            <td>@brf.KontaktEmail</td>
                            <td>@(brf.KontaktTelefon ?? "-")</td>
                            <td>@brf.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (brf.IsActive)
                                {
                                    <span class="badge bg-success">Aktiv</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inaktiv</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Totalt: @brfList.Count BRF:er</p>
        </div>
    }
</div>

